;VIET CHUONG TRINH BANG HOP NGU LC3 CHO PHEP NGUOI DUNG NHAP 2 KY TU TU BAN PHIM, LUU MA ASCII CUA 2 KY TU DO VAO BO NHO THEO YEU CAU O NHO X4000 CHUA MA ASCII LON VA X40001 CHUA MA ASCII NHO, NEU GIONG NHAU THI CHI LUU VAO O NHO X4000

		.ORIG X3000

		IN 
		ADD R3,R0,#0;		LUU KY TU VUA NHAP VAO R3
		IN 
		ADD R4,R0,#0;		LUU KY TU VUA NHAP VAO R4
		NOT R0,R0
		ADD R0,R0,#1
		ADD R5,R3,R0;		TRU 2 MA ASCII CHO NHAU
		BRP A_LON_B
		ADD R5,R3,R0;
		BRZ A_BANG_B
		LD R6,DIA_CHI
		STR R4,R6,#0
		STR R3,R6,#1
		BR KET_THUC
A_LON_B		LD R6,DIA_CHI
		STR R3,R6,#0
		STR R4,R6,#1
		BR KET_THUC
A_BANG_B	LD R6,DIA_CHI
		STR R3,R6,#0
KET_THUC	HALT
DIA_CHI 	.FILL X4000
		.END			
		