; VIET CHUONG TRINH HOP NGU LC3 THUC HIEN NHAP 2 SO (NHO HON BANG 9) TU BAN PHIM VA THUC HIEN PHEP TINH TRU 2 SO, LUU KET QUA VAO O NHO CO DIA CHI X4000. CHUONG TRINH BAT DAU CO DIA CHI X3000 VA XUAT RA MAN HINH THEO 2 MAU BEN DUOI
		.ORIG X3000
		LEA R0,NHAP_1;		LUU CHUOI NHAP SO 1 VAO R0
		PUTS
		IN
		ADD R2,R0,0;		LUU SO VUA NHAP VAO R2
		LEA R0,NHAP_2;		LUU CHUOI NHAP SO 2 VAO R0
		PUTS 
		IN 
		ADD R3,R0,0;		LUU SO VUA NHAP VAO R3
		ADD R4,R3,0;		LUU SO THU HAI LAI DE TINH TOAN
		NOT R4,R4
		ADD R4,R4,#1;		LAY BU 2 CUA R4
		ADD R5,R2,R4;		R5=R2-R4
		BRN XUAT_AM
		LEA R0,KY_TU_XUAT
		PUTS
		ADD R0,R2,0
		OUT
		LD R0,MINUS_SIGN;	XUAT DAU TRU
		OUT
		ADD R0,R3,0
		OUT
		LD R0,EQUAL_SIGN;	XUAT DAU BANG
		ADD R0,R1,0
		OUT
		LD R0,ASCII_0
		ADD R0,R5,R0
		OUT
		BR KETTHUC
XUAT_AM		LEA R0,KY_TU_XUAT
		PUTS
		ADD R0,R2,0
		OUT
		LD R0,MINUS_SIGN
		OUT
		ADD R0,R3,0
		OUT
		LD R0,EQUAL_SIGN;	XUAT SO BANG
		OUT
		LD R0,MINUS_SIGN;	XUAT SO AM PHAI CO DAU TRU
		OUT
		NOT R5,R5
		ADD R5,R5,1;		CHUYEN SO AM THANH SO DUONG
		LD R0,ASCII_0
		ADD R0,R5,R0
		OUT
KETTHUC		HALT
NHAP_1		.STRINGZ "Moi nhap so 1"
NHAP_2		.STRINGZ "Moi nhap so 2"
KY_TU_XUAT	.STRINGZ "Hieu hai so: "
ASCII_0		.FILL #48
MINUS_SIGN	.FILL #45
EQUAL_SIGN	.FILL #61
		.END
		