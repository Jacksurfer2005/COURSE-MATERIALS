;VIET CHUONG TRINH BANG HOP NGU LC3 TINH TONG S=2+4+6+8+...+100. LUU VAO O NHO X4000

		.ORIG X3000
		LD R1,SO_LAN
		AND R2,R2,#0;			KHOI TAO R2 LA BIEN TONG
		AND R3,R3,#0;			KHOI TAO R3 LA BIEN GIA TRI TANG DAN
TIEPTUC		ADD R2,R2,R3
		ADD R1,R1,#-1
		BRZ DUNG
		ADD R3,R3,#2
		BR TIEPTUC
DUNG		LD R4,DIA_CHI
		STR R2,R4,#0
		HALT
SO_LAN		.FILL #51
DIA_CHI 	.FILL X4000
		.END
		
		